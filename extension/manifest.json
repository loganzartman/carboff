{
    "name": "carboff",
    "version": "1.0",
    "description": "Stop leaving carb-on",
    "permissions": [
      "storage",
      "tabs",
      "webRequest",
      "debugger",
      "<all_urls>"
    ],
    "icons": {
        "16": "icon-16.png",
        "16": "icon-32.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "background": {
      "scripts": ["index.js"],
      "persistent": true
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Stop leaving carb-on"
    },
    "manifest_version": 2
}
